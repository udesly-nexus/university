---

const { data } = Astro.props.entry;
const { title = data.title, hero_title = title, tagline, image, actions = [] } = data.hero || {};
import services from '../assets/webflow-services.svg';
import wp from '../assets/wordpress.svg';
import shopi from '../assets/shopify.svg';
import jm from '../assets/jamstack.svg';
import ghost from '../assets/ghost.png';
---

<div class="hero">
    
	
	<div class="sl-flex stack">
		<div class="sl-flex copy">
			<h1 data-page-title set:html={hero_title} />
			{tagline && <div class="tagline" set:html={tagline} />}
		</div>
	</div>
    <div class="animation-container">
       <img src={services.src} class="base-image"/>
	   <div class="absolute">
		 <img src={wp.src} class="wp"/>
	   </div>
	   <div class="absolute" style="--duration: 20s">
		<img src={shopi.src} class="shopify"/>
	  </div>
	  <div class="absolute" style="--duration: 30s">
		<img src={jm.src} class="jamstack"/>
	  </div>
	  <div class="absolute" style="--duration: 50s">
		<img src={ghost.src} class="ghost"/>
	  </div>
    </div>
</div>
<script>
	document.addEventListener('readystatechange', () => {
  document.documentElement.classList.add(document.readyState)
})

</script>
<style>
	.animation-container {
		position: relative;
	}
	.absolute {
		--duration: 50s;
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		animation: rotateclockwise linear var(--duration) infinite;
	}

	.absolute img {
		animation: rotatecounterclockwise linear var(--duration) infinite;
	}

	.shopify {
		position: absolute;
		width: 11%;
		bottom: 28%;
		right: 40%;
		top: auto;
	}

	.jamstack {
		position: absolute;
		width: 11%;
		bottom: 15%;
		right: 40%;
		top: auto;
	}

	.ghost {
		position: absolute;
		width: 11%;
		bottom: 60%;
		right: 85%;
		top: auto;
	}

	.wp {
		position: absolute;
		width: 11%;
		bottom: 15%;
		right: 18%;
		top: auto;
		left: auto;
	}

	@keyframes rotateclockwise {
		0% {
			transform: rotateZ(0deg);
		}
		100% {
			transform: rotateZ(360deg);
		}
	}

	@keyframes rotatecounterclockwise {
		0% {
			transform: rotateZ(0deg);
		}
		100% {
			transform: rotateZ(-360deg);
		}
	}


	.hero {
		display: grid;
		align-items: center;
		gap: 1rem;
		padding-bottom: 1rem;
	}


    .hero-links {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
    }

    .hero-links a {
        transition: 0.3s linear;
        width: calc(50% - 1rem);
        padding: 1.5rem 2.5rem;
        background-color: var(--color-hero-background, hsl(224, 10%, 10%));
        display: flex;
        justify-content: center;
        align-items: center;
        border: 1px solid var(--color-hero-background, hsl(224, 10%, 10%));
        border-radius: 0.5rem;
        
    }
    .hero-links a:hover {
        box-shadow: none;
      background-color: #f6f3ff;
    }

    .hero-links a img {
        width: 100%;
        height: auto;
    }

    .hero-links a:nth-child(2),.hero-links a:nth-child(4) {
        transform: translateY(1.5rem);
    }

	.stack {
		flex-direction: column;
		gap: clamp(1.5rem, calc(1.5rem + 1vw), 2rem);
		text-align: center;
	}

	.copy {
		flex-direction: column;
		gap: 1rem;
		align-items: center;
	}

	.copy > * {
		max-width: 50ch;
	}

	h1 {
		font-size: clamp(var(--sl-text-3xl), calc(0.25rem + 5vw), var(--sl-text-6xl));
		line-height: var(--sl-line-height-headings);
		font-weight: 600;
		color: var(--sl-color-white);
	}

	.tagline {
		font-size: clamp(var(--sl-text-base), calc(0.0625rem + 2vw), var(--sl-text-xl));
		color: var(--sl-color-gray-2);
	}

	.actions {
		gap: 1rem 2rem;
		flex-wrap: wrap;
		justify-content: center;
	}

	@media (min-width: 50rem) {
		.hero {
			grid-template-columns: 6fr 4fr;
			gap: 3%;
			padding-block: 2.5rem;
		}

		.hero > img,
		.hero > .hero-html {
			order: 2;
			width: min(100%, 25rem);
		}

		.stack {
			text-align: start;
		}

		.copy {
			align-items: flex-start;
		}

		.actions {
			justify-content: flex-start;
		}
	}

	@media (max-width: 50rem) {
		.hero, .animation-container {
			overflow: hidden;
		}
	}

	@media (max-width: 35rem) {
		.hero .copy * {
			text-align: left;
		}
	}
</style>
